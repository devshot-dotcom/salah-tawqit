<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="fragment"
            type="com.salahtawqit.coffee.fragments.PrayerTimesFragment" />
        <variable
            name="viewData"
            type="com.salahtawqit.coffee.viewmodels.PrayerTimesViewModel.ViewData"/>
        <variable
            name="areTimingsSelectedFromDatabase"
            type="Boolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PrayerTimesFragment">

        <ImageButton
            style="@style/icon.large"
            android:onClick="@{fragment::navigateBackwards}"
            android:src="@drawable/icon_arrowbackwards_plain"
            android:contentDescription="@string/navigate_to_prayer_times"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_vertical"
            android:dividerPadding="@dimen/mp_large"
            android:orientation="vertical"
            android:padding="@dimen/mp_large"
            android:showDividers="middle">

            <!-- Location Information. -->
            <LinearLayout
                style="@style/layout.horizontalFill"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/typography.title"
                    android:text='@{viewData.cityName}'
                    tools:text="City Name" />

                <TextView
                    style="@style/typography.secondaryText.large"
                    android:text='@{viewData.countryName}'
                    tools:text="Country Name" />

            </LinearLayout>

            <ScrollView style="@style/layout.horizontalFill">
                <LinearLayout
                    android:showDividers="middle"
                    android:orientation="vertical"
                    android:dividerPadding="@dimen/mp_large"
                    style="@style/layout.horizontalFill"
                    android:divider="@drawable/divider_vertical">

                    <!-- Saved Times Notification. -->
                    <LinearLayout
                        style="@style/notification.secondary"
                        android:visibility="@{areTimingsSelectedFromDatabase ? View.VISIBLE : View.GONE}">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            style="@style/typography.secondaryText.large"
                            android:text="@string/showing_saved_prayer_times"/>

                        <ImageButton
                            style="@style/icon.medium"
                            android:src="@drawable/icon_close_plain"
                            android:onClick="@{fragment::hideSavedTimesNotification}"
                            android:contentDescription="@string/close_notification"/>

                    </LinearLayout>

                    <!-- Dates. -->
                    <LinearLayout
                        style="@style/ListItem.vertical">

                        <!-- Hijri Date. -->
                        <LinearLayout
                            android:gravity="center_vertical"
                            tools:ignore="UseCompoundDrawables"
                            style="@style/layout.horizontalFill">

                            <ImageView
                                style="@style/compoundIcon.medium"
                                android:src="@drawable/icon_moon_plain"
                                android:contentDescription="@string/a_crescent"/>

                            <TextView
                                android:layout_marginStart="@dimen/mp_large"
                                android:text='@{viewData.hijriDate}'
                                tools:text="Hijri Date, Hijri Year"
                                style="@style/typography.secondaryText.large"/>

                        </LinearLayout>

                        <!-- Gregorian Date. -->
                        <LinearLayout
                            style="@style/layout.horizontalFill"
                            android:gravity="center_vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                style="@style/compoundIcon.medium"
                                android:src="@drawable/icon_calendar_plain"
                                android:contentDescription="@string/a_calendar"/>

                            <TextView
                                style="@style/typography.secondaryText.large"
                                android:text='@{viewData.gregorianDate}'
                                tools:text="Gregorian Date, Gregorian Year"
                                android:layout_marginStart="@dimen/mp_large" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Label (Fard Prayers). -->
                    <TextView
                        style="@style/typography.secondaryText"
                        android:text="@string/fard_necessary_prayers"/>

                    <!-- Fajr. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_fajr"
                        app:listTitle="@string/fajr"
                        app:listValue='@{viewData.prayerTimes.fajr}'/>

                    <!-- Sunrise. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_sunrise"
                        app:listTitle="@string/sunrise"
                        app:listValue='@{viewData.prayerTimes.sunrise}'/>

                    <!-- Dhuhr. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_dhuhr"
                        app:listTitle="@string/dhuhr"
                        app:listValue='@{viewData.prayerTimes.dhuhr}'/>

                    <!-- Asr. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_asr"
                        app:listTitle="@string/asr"
                        app:listValue='@{viewData.prayerTimes.asr}'/>

                    <!-- Sunset. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_sunset"
                        app:listTitle="@string/sunset"
                        app:listValue='@{viewData.prayerTimes.sunset}'/>

                    <!-- Maghrib. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_maghrib"
                        app:listTitle="@string/maghrib"
                        app:listValue='@{viewData.prayerTimes.maghrib}'/>

                    <!-- Isha. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_isha"
                        app:listTitle="@string/isha"
                        app:listValue='@{viewData.prayerTimes.isha}'/>

                    <!-- Label (Voluntary Prayers). -->
                    <TextView
                        style="@style/typography.secondaryText"
                        android:text="@string/nafl_voluntary_prayers"/>

                    <!-- Tahajjud. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_tahajjud"
                        app:listTitle="@string/tahajjud"
                        app:listValue='@{viewData.prayerTimes.tahajjud}'/>

                    <!-- Ishraq. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_ishraq"
                        app:listTitle="@string/ishraq"
                        app:listValue='@{viewData.prayerTimes.ishraq}'/>

                    <!-- Duha. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_duha"
                        app:listTitle="@string/duha_chasht"
                        app:listValue='@{viewData.prayerTimes.duha}'/>

                    <!-- Awwabin. -->
                    <com.salahtawqit.coffee.views.ListItem
                        style="@style/ListItem.horizontal"
                        app:listIcon="@drawable/prayericon_awwabin"
                        app:listTitle="@string/awwabin"
                        app:listValue='@{viewData.prayerTimes.maghrib}'/>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</layout>